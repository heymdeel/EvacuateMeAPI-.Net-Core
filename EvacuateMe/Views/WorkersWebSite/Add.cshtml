@model EvacuateMe.BLL.DTO.WorkerRegisterDTO

@{
    ViewData["Title"] = "Добавление водителя";
}

@Html.Partial("_ValidationScriptsPartial")

<form asp-antiforgery="true" asp-action="Register" asp-controller="WorkersWebSite">
    <div>
        <div class="validation" asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name"></label><br />
            <input class="form-control" type="text" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Surname"></label><br />
            <input class="form-control" type="text" asp-for="Surname" />
        </div>
        <div class="form-group">
            <label asp-for="Patronymic"></label><br />
            <input class="form-control" type="text" asp-for="Patronymic" />
        </div>
        <div class="form-group">
            <label asp-for="Phone"></label><br />
            <input class="form-control" asp-for="Phone" />
        </div>
        <div class="form-group">
            <label asp-for="CarNumber"></label><br />
            <input class="form-control" asp-for="CarNumber" />
        </div>
        <div>
            <input class="btn btn-default" type="submit" value="Save" />
        </div>
    </div>
</form>
