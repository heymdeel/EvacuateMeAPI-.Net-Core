<div class="login">
    @if (!User.Identity.IsAuthenticated)
    {
        <form asp-action="Login" asp-controller="Account">
            <input type="text" name="login" placeholder="Логин" value="" class="inputValue">
            <input type="password" name="password" placeholder="Пароль" value="" class="inputValue">
            <input type="submit" value="Войти">
        </form>
    }
    else
    {
        <p>Вы авторизованы как @ViewData["name"]</p>
        <form asp-action="Logout" asp-controller="Account">
            <input type="submit" value="Выйти">
        </form>
    }
</div>