@model EvacuateMe.BLL.DTO.CompanyRegisterDTO

@{
    ViewData["Title"] = "Добавление компании";
}

@Html.Partial("_ValidationScriptsPartial")

<form asp-antiforgery="true" asp-action="Register" asp-controller="Company">
    <div>
        <div class="validation" asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name"></label><br />
            <input class="form-control" type="text" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label><br />
            <input class="form-control" asp-for="Description" />
        </div>
        <div class="form-group">
            <label asp-for="Address"></label><br />
            <input class="form-control" asp-for="Address" />
        </div>
        <div class="form-group">
            <label asp-for="ContactPhone"></label><br />
            <input class="form-control" asp-for="ContactPhone" />
        </div>
        <div class="form-group">
            <label asp-for="EMail"></label><br />
            <input class="form-control" asp-for="EMail" />
        </div>
        <div class="form-group">
            <label asp-for="MinSum"></label><br />
            <input class="form-control" asp-for="MinSum" />
        </div>
        <div class="form-group">
            <label asp-for="Tariff"></label><br />
            <input class="form-control" asp-for="Tariff" />
        </div>
        <div class="form-group">
            <label asp-for="LogoUrl"></label><br />
            <input class="form-control" asp-for="LogoUrl" />
        </div>
        <div class="form-group">
            <label asp-for="Login"></label><br />
            <input class="form-control" asp-for="Login" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br />
            <input class="form-control" asp-for="Password" />
        </div>
        <div>
            <input class="btn btn-default" type="submit" value="Save" />
        </div>
    </div>
</form>
